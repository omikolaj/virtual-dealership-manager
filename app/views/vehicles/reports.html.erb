<div class="container">
<div class="row justify-content-md-center">
<h3>Report for <%=@dealership.nil? ? "all dealerships" : @dealership.name%></h3>
</div>
</div>

<div class="jumbotron jumbotron-country text-center jumbotron-background top-buffer">
<h4><%= report_type %></h4>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Dealership</th>
      <th scope="col">Make</th>
      <th scope="col">Model</th>
      <th scope="col">Year</th>
      <th scope="col">Price</th>
      <th scope="col">Buyer</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'vehicles/report', :collection => @vehicles, :as => :vehicle %><br>
  </tbody>
</table>
</div>

<div class="container">
<div class="row justify-content-md-center">
<%= link_to "Back", root_path, class: "btn btn-outline btn-xl js-scroll-trigger mb-5" %>
</div>
</div>