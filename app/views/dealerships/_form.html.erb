<%= form_for(@dealership) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="form-group mt-2 justify-content-md-center" >
<%= f.label :name, class: "col-form-label" %>
<div class="row justify-content-md-center">
<div class="col-sm-9">
<%= f.text_field :name, class:"form-control" %>
</div>
</div>
</div>

<div class="form-group mt-2 justify-content-md-center" >
<%= f.label :city, class: "col-form-label" %>
<div class="row justify-content-md-center">
<div class="col-sm-9">
<%= f.text_field :city, class:"form-control" %>
</div>
</div>
</div>

<div class="row justify-content-md-center">
<div class="col-lg-8 col-md-8">
<%= f.submit yield(:button_text), class: "btn btn-outline btn-xl js-scroll-trigger btn-block top-buffer nobackground" %>
<% end %>
</div>
</div>

<div class="row justify-content-md-center">
<div class="col-lg-8 col-md-8">
 <%= link_to "Back", @dealership, class:"btn btn-outline btn-xl js-scroll-trigger btn-block top-buffer mb-2"%>
</div>
</div>