<%= form_for(@employee) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.label :first_name %><br>
<%= f.text_field :first_name %><br>
<%= f.label :last_name %><br>
<%= f.text_field :last_name %><br>
<%= f.label :email unless @employee.skip_email_validation%><br>
<%= f.email_field :email unless @employee.skip_email_validation%><br>
<%= f.label :password unless @employee.skip_password_validation%><br>
<%= f.password_field :password unless @employee.skip_password_validation%><br>
<%= f.label "Select Your Dealership"%><br>
<%= f.collection_select :dealership_id, Dealership.all, :id, :name %><br>
<%= f.label "Are you a manager?"%><br>
<%= f.check_box :manager %><br>
<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
