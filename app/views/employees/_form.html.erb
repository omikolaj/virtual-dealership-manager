<%= form_for(@employee) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :email %><br>
<%= f.email_field :email %><br>
<%= f.label :password unless @employee.omniauth %><br>
<%= f.password_field :password unless @employee.omniauth %><br>
<%= f.label "Select Your Dealership"%><br>
<%= f.collection_select :dealership_id, Dealership.all, :id, :name %><br>
<%= f.label "Are you a manager?"%><br>
<%= f.check_box :manager %>
<%= f.submit yield(:button_text), class:"btn btn-outline btn-xl js-scroll-trigger btn-block nobackground"%>
<% end %>

